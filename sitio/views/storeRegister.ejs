<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <div class="container">
      <section class="login">
        <div class="row principal">
          <div class="titulo col-12">

            <h2><%= title %></h2>

          </div>
          <div class="col-12">
            <div class="contenido">
              <div class="row py-3 px-5">
                <div class="col-12 col-md-5 col-lg-6 col-xl-4 d-flex flex-column justify-content-center">
                  <figure>
                  <img src="/images/logo-mercado-liebre.svg" alt="" class="w-75"/>
                  </figure>
                </div>
                <div class="col-12 col-md-7 col-lg-6 col-xl-8 ">
                  <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                      <h5 class="text-secondary col-12">Datos de la Tienda</h5>

                      <div class="form-group col-12 col-xl-6">
                        <div class="custom-file mt-4">
                          <input type="file" class="custom-file-input " id="customFileLang" lang="en" name="logo">
                          <label class="custom-file-label" for="customFileLang">Logo de la tienda</label>
                          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.avatar)?errors.avatar.msg: "" %> </small>
                        </div>
                      </div>
                   
                      <div class="form-group col-12 col-lg-6">
                        <label for="nameStore"></label>
                        <input type="text"
                        class="form-control <%= (typeof errors != 'undefined' && errors.nameStore)?"is-invalid": ""  %>"
                        id="nameStore" placeholder="nombre de la tienda" name="nameStore"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nameStore)?errors.nameStore.msg: "" %> </small>
                      </div>
                    </div>
                    <div class="form-row">
                      <h5 class="text-secondary col-12">Datos del responsable</h5>

                      <div class="form-group col-12 col-xl-6">
                        <label for="nombre"></label>
                        <input type="text"
                        class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>"
                        id="nombre"  name="nombre"  value="" placeholder="nombre"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>
                      </div>

                      <div class="form-group col-12 col-xl-6">
                        <label for="apellido"></label>
                        <input type="text"
                        class="form-control <%= (typeof old != 'undefined' && old.apellido)?"is-valid":(typeof errors != 'undefined' && errors.apellido)?"is-invalid": ""  %>"
                        id="apellido" value="" placeholder="apellido" name="apellido"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %> </small>
                      </div>

                    </div>
                
                    <div class="form-row">
                      
                      <div class="form-group col-12 col-xl-6">
                        <label for="email"></label>
                        <input type="email"
                        class="form-control <%= (typeof old != 'undefined' && old.email && !errors.email)?"is-valid":(typeof errors != 'undefined' && errors.email)?"is-invalid": ""  %> "
                        id="email" value="" placeholder="email" name="email"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
                      </div>

                      <div class="form-group col-12 col-xl-6">
                        <label for="pass"></label>
                        <input type="password"
                        class="form-control <%= (typeof errors != 'undefined' && errors.pass)?"is-invalid": ""  %>"
                        id="pass" value="" placeholder="contraseÃ±a" name="pass"/>
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>
                      </div>
                    

                    </div>
                  
                    <div class="row">

                  
                    <div class="col-12 col-lg-6 mt-2">
                      <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input <%= (typeof old != 'undefined' && old.bases)?"is-valid":(typeof errors != 'undefined' && errors.bases)?"is-invalid": ""  %>" id="customCheck1" name="bases" required>
                        <label class="custom-control-label" for="customCheck1">acepto las bases y condiciones</label><br>
                        <a href="" class="text-info">ver bases y condiciones</a><br>
                      
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.bases)?errors.bases.msg: "" %> </small>
                      </div>
                    </div>
                        <div class="col-12 col-lg-6 mt-2">
                          <button type="submit" class="btn btn-primary">
                            Registrarse
                          </button>
                        </div>
                    </div>
                  </div>
                    
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
