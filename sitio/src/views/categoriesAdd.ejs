<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<script src="/javascripts/categorieAdd.js"></script>

<body>
  <%- include('partials/header') %>

  <div class="container">
    <section class="login">
      <div class="row productos">
        <div class="titulo col-12">

          <h2><%= title %></h2>

        </div>
        <div class="col-12">
          <div class="contenido">
            <div class="row py-3 px-5">
            
              <div class="col-12 col-md-7 col-lg-6 col-xl-8 ">
                <form action="" method="POST" enctype="multipart/form-data">

                  <div class="form-row">

                    <div class="form-group col-12 col-xl-6">
                      <label for="nombre"></label>
                      <input type="text"
                        class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>"
                        id="nombre" name="nombre" value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>"
                        placeholder="categoria" />
                      <small class="text-danger"
                        id="errorNombre"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %>
                      </small>
                    </div>

                    <div class="form-group col-12 col-xl-6">
                      <div class="custom-file mt-4">
                        <input type="file"
                          class="custom-file-input <%= (typeof old != 'undefined' && old.logo)?"is-valid":(typeof errors != 'undefined' && errors.logo)?"is-invalid": ""  %>"
                          id="logo" lang="en" name="logo">
                        <label class="custom-file-label" for="logo">Logotipo</label>
                        <small
                          class="text-danger"><%= (typeof errors != 'undefined' && errors.logo)?errors.logo.msg: "" %>
                        </small>
                      </div>
                    </div>

                  </div>

                  <div class="col-12 col-lg-6 mt-2">
                    <button type="submit" class="btn btn-primary">
                      Agregar
                    </button>
                  </div>
                </form>

              </div>
              <div class="col-12 col-md-5 col-lg-6 col-xl-4 d-flex flex-column justify-content-center">
                <figure>
                  <img src="" alt="" class="w-75" id="vistaPrevia" />
                </figure>
              </div>

            </div>
          </div>
        </div>
      </div>
  </div>
  </div>
  </section>
  </div>
  <%- include('partials/footer') %>
</body>

</html>